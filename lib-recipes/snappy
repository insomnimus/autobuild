#!/usr/bin/env bash

download snappy lib/libsnappy.a

set_env

mkcd autobuild
cmake_install .. \
	-DBUILD_{STATIC_LIBS=ON,SHARED_LIBS=OFF} \
	-DBENCHMARK_ENABLE_{ASSEMBLY_TESTS,DOXYGEN,GTEST_TESTS,INSTALL,WERROR,INSTALL_DOCS}=OFF \
	-D{BUILD_GMOCK,INSTALL_GTEST}=OFF \
	-DSNAPPY_BUILD_{BENCHMARKS,TESTS}=OFF \
	-DSNAPPY_INSTALL=ON
